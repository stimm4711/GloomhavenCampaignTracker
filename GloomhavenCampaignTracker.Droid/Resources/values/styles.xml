<?xml version="1.0" encoding="utf-8"?>
<resources>
  <color name="mytheme_background">#ff313131</color>

  <style name="MyTheme.Splash" parent ="Theme.AppCompat.Light.NoActionBar">
    <item name="android:windowNoTitle">true</item>
    <item name="android:windowFullscreen">true</item>
    <item name="android:windowBackground">?android:attr/colorBackground</item>
    <item name="android:colorBackground">@color/mytheme_background</item>
    <item name="colorAccent">@color/gloom_secondary</item>
  </style>

  <style name="MyTheme" parent="MyTheme.Base">
    <item name="android:colorBackground">@color/mytheme_background</item>
    <item name="android:windowBackground">?android:attr/colorBackground</item>
  </style>
  
  <!-- Base theme applied no matter what API -->
  <style name="MyTheme.Base" parent="Theme.AppCompat.Light.DarkActionBar">
    <!--If you are using revision 22.1 please use just windowNoTitle. Without android:-->
    <item name="windowNoTitle">true</item>
    <item name="windowActionBar">false</item>
    <item name="colorPrimary">@color/gloom_primary</item>
    <item name="colorPrimaryDark">@color/gloom_primaryDark</item>
    <item name="android:popupMenuStyle">@style/PopupMenu</item>
    <item name="colorAccent">@color/gloom_secondary</item>
    <item name="android:editTextStyle">@style/App_EditTextStyle</item>
    <item name="android:textColorPrimary">@color/gloom_primaryText</item>
    <item name="android:fontFamily">@font/pirata_one_font_family</item>
  </style>

  <style name="PagerTabStripText">
    <item name="android:textSize">20sp</item>
  </style>

  <style name="NavigationDrawerStyle">
    <item name="android:textSize">18sp</item>
    <!-- text size in menu-->
    <item name="android:listPreferredItemHeightSmall">40dp</item>
    <!-- item size in menu-->
  </style>

  <style name="HintTextLabel" parent="">
    <item name="android:textSize">16sp</item>
    <item name="android:textColor">@color/gloom_secondary</item>
  </style>

  <style name="App_EditTextStyle" parent="">    
    <item name="android:textColor">@color/gloom_primaryText</item>
  </style>

  <style name="PopupMenu" parent="">
    <item name="android:popupBackground">@color/gloom_popupmenuBackground</item>-->
    <item name="android:textColor">#000000</item>
  </style>

  <style name="MyDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
    <!--buttons color-->
    <item name="colorAccent">@color/gloom_secondary</item>
    <!--title and message color-->
    <item name="android:textColorPrimary">@android:color/white</item>
    <!--dialog background-->
    <item name="android:windowBackground">@color/mytheme_background</item>
  </style>

  <style name="MyTransparentDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
    <!--buttons color-->
    <item name="colorAccent">@color/gloom_secondary</item>
    <!--title and message color-->
    <item name="android:textColorPrimary">@android:color/white</item>
    <!--dialog background-->
    <item name="android:windowBackground">@android:color/transparent</item>
  </style>


  <style name="TextLabel" parent="">
    <!-- Hint color and label color in FALSE state -->
    <item name="android:textColorHint">@color/gloom_popupmenuBackground</item> 
    <item name="android:textSize">20sp</item>
    <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
    <item name="colorControlNormal">@color/gloom_secondary</item>
    <item name="colorControlActivated">@color/gloom_secondary</item>
 </style>
</resources>